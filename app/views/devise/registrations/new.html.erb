<div class="login-container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-sections">
      <!-- Section 1: Personal Information -->
      <fieldset>
        <legend>Personal Information</legend>

        <div class="field">
          <%= f.label :full_name %><br />
          <%= f.text_field :full_name %>
        </div>

        <div class="field">
          <%= f.label :phone_number %><br />
          <%= f.text_field :phone_number %>
        </div>

        <div class="field">
          <%= f.label :organization_type %><br />
          <%= f.select :organization_type, [
            'Food retailer',
            'Restaurant',
            'Truck driver',
            'Food pantry / soup kitchen',
            'Food processors',
            'Farm',
            'Individual (not associated with an organization)'
          ], { prompt: 'Select your organization type' } %>
        </div>

        <div class="field">
          <%= f.label :location %><br />
          <%= f.text_field :location %>
        </div>
      </fieldset>

      <!-- Section 2: Account Information -->
      <fieldset>
        <legend>Account Information</legend>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <!-- Dropdown for organization_type -->

        <div class="field">
          <%= f.label :contact_preference, "Preferred contact method" %><br />
          <%= f.radio_button :contact_preference, "text" %> Text
          <%= f.radio_button :contact_preference, "email" %> Email
        </div>
      </fieldset>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
