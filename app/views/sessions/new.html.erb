<h2>Login</h2>
<%= form_with url: login_path do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit 'Login' %>
<% end %>

<%= link_to 'Sign Up', signup_path %>
