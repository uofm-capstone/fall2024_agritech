<h1>On the Market Nearby</h1>
 
<table class="table table-hover">
 
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Marketer</th>
      <th>Expiration</th>
      <th>Hold Duration</th>
    </tr>
  </thead>
 
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.amount %></td>
        <td><%= product.marketer %></td>
        <td><%= product.expiration.strftime("%m/%d/%Y") %></td>
        <td><%= product.hold %></td>
      </tr>
    <% end %>
  </tbody>
 
</table>